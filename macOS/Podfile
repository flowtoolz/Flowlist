use_frameworks!

platform :osx, '10.12'

target 'Flowlist' do

    pod 'GetLaid', :path=> '../../Frameworks/GetLaid'
    pod 'UIObserver', :path=> '../../Frameworks/UIObserver'
    pod 'UIToolz', :path=> '../../Frameworks/UIToolz'
    pod 'FoundationToolz', :path=> '../../Frameworks/FoundationToolz'
    pod 'SwiftObserver', :path=> '../../Frameworks/SwiftObserver'
    pod 'SwiftyToolz', :path=> '../../Frameworks/SwiftyToolz'
    pod 'PromiseKit', '~> 6.7'
    pod 'PromiseKit/CloudKit', '~> 6.7'

end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.12'
        end
    end
end
