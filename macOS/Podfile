use_frameworks!

platform :osx, '10.10'

target 'Flowlist' do
  
    pod 'PureLayout'
    pod 'UIObserver', :path=> '../../Github Repos/UIObserver'
    pod 'UIToolz', :path=> '../../Github Repos/UIToolz'
    pod 'FoundationToolz', :path=> '../../Github Repos/FoundationToolz'
    pod 'SwiftObserver', :path=> '../../Github Repos/SwiftObserver'
    pod 'SwiftyToolz', :path=> '../../Github Repos/SwiftyToolz'

end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.10'
        end
    end
end
