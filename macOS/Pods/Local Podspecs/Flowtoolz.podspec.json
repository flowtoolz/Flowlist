{
  "name": "Flowtoolz",
  "version": "0.2.0",
  "summary": "A collection of re-usable Swift code",
  "description": "A collection of re-usable Swift code",
  "homepage": "https://flowtoolz.com",
  "license": "commercial",
  "authors": {
    "Flowtoolz": "contact@flowtoolz.com"
  },
  "source": {
    "git": "https://github.com/flowtoolz/Flowtoolz.git",
    "tag": "0.2.0"
  },
  "requires_arc": true,
  "platforms": {
    "ios": "9.0",
    "osx": "10.10",
    "tvos": "9.0"
  },
  "subspecs": [
    {
      "name": "Swift",
      "source_files": "Code/swift/**/*.swift"
    },
    {
      "name": "Foundation",
      "source_files": "Code/foundation/**/*.swift",
      "dependencies": {
        "ReachabilitySwift": [
          "3"
        ]
      }
    },
    {
      "name": "UI",
      "ios": {
        "source_files": "Code/uikit/**/*.swift"
      },
      "tvos": {
        "source_files": "Code/uikit/**/*.swift"
      },
      "osx": {
        "source_files": "Code/appkit/**/*.swift"
      },
      "dependencies": {
        "PureLayout": [
          "3.0.2"
        ]
      }
    }
  ]
}
